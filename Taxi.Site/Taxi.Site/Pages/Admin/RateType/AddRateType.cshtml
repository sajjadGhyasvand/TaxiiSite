@page
@model Taxi.Site.Pages.Admin.RateType.AddRateTypeModel
@{
    ViewData["Title"] = "  ثبت امتیاز";
    Layout = "_DashBoarddLayout";
}


<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="card">
            <div class="header">
                <h4 class="title pull-right">افزودن امتیاز </h4>
            </div>
            <div class="content">
                <form method="post">
                    <div class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="_viewModel.Name">نام</label>
                                <input asp-for="_viewModel.Name" type="text" class="form-control" placeholder="نام ">
                                <span asp-validation-for="_viewModel.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label asp-for="_viewModel.Name"> مثبت </label>
                                    <input type="checkbox" asp-for="_viewModel.OK" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="_viewModel.ViewOrder"></label>
                                <input asp-for="_viewModel.ViewOrder" type="number" class="form-control" value="0" min="0">
                                <span asp-validation-for="_viewModel.ViewOrder" class="text-danger"></span>
                            </div>
                           
                        </div>
                    </div>

                    <button type="submit" class="btn btn-info btn-fill">ثبت</button>
                    <a href="/admin/RateTypes" class="btn btn-danger btn-fill">
                        بازگشت
                    </a>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
