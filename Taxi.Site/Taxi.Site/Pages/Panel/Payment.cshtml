@page "{id:guid}"
@model Taxi.Site.Pages.Panel.PaymentModel

@{
    ViewData["Title"] = "شارژ کیف پول";
    Layout = "_SiteLayout";
}

<h1 class="text-center">افزایش اعتبار</h1>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img src="~/img/Payment.png" alt="اسنپ" class="img-fluid" style="margin: auto" />
            </div>
            <div class="form-group">
                @*<label asp-for="FullName" class="control-label"></label>*@
                <input asp-for="_viewModel.Wallet" class="form-control" placeholder="مبلغ به ریال" />
                <span asp-validation-for="_viewModel.Wallet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="پرداخت آنلاین" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>