@page
@model Taxi.Site.Pages.Panel.UserProfileModel

@{
    ViewData["Title"] = "مشخصات";
    Layout = "_SiteLayout";

}


<h1 class="text-center">مشخصات پروفایل</h1>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="UserProfile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img src="~/img/Profile.png" alt="اسنپ" class="img-fluid" style="margin: auto" />
            </div>
            <div class="form-group">
                <label asp-for="_viewModel.FullName" class="control-label">نام و نام خانوادگی</label>
                <input asp-for="_viewModel.FullName" class="form-control" placeholder="نام و نام خانوادگی" />
                <span asp-validation-for="_viewModel.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="_viewModel.BirthDate" class="control-label">تاریخ تولد</label>
                <input asp-for="_viewModel.BirthDate" onclick="PersianDatePicker.Show(this,'@ViewData["MyDate"].ToString()')" class="form-control" placeholder="تاریخ تولد" />
                <span asp-validation-for="_viewModel.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>


@section Scripts{

<script src="~/js/sweet.js"></script>

<script src="~/picker/PersianDatePicker.min.js"></script>
@if (ViewData["IsSuccess"] == "true")
{
<script>
        swal("انجام شد", "تغییرات با موفقیت انجام شد", "success", {
            button: "متوجه شدم",
        });
</script>
}
}
